days = "Mon Tue Wed Thu Fri Sat Sun "
months = "Jan\tFeb\tMar\tApr\tMay\nJun\\Jul\\Aug" #\t represents tab space \n means new line

puts "Here are the days: ", days
puts "Here are the months: ", months

